%h1= t(".advanced_search")

= form_with url: search_pokemon_index_path, method: :get do |f|

	= f.label :name
	= f.text_field :name

	= f.label :pokemon_type
	= f.select :pokemon_type, options_for_select(@pokemon_types, params[:pokemon_type]), include_blank: true

	= f.label :region
	= f.select :region, options_for_select(@regions, params[:region]), include_blank: true
	%br

	= f.submit t(".search")
	%br
	%br

- if @pokemons.empty?
	%p No Pokemon were found.
- else
	%table
		%thead
			%tr
				%th= t(".name")
				%th= t(".type")
				%th= t(".region")
				%th{colspan: "3"}
		= render @pokemons
%br

= render "back"
