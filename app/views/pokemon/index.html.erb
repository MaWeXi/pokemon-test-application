<p id="notice"><%= notice %></p>

<h1>Pokemon</h1>

<%= form_with url: "/pokemon", method: :get, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.submit "Search" %>
<% end %>

<%= link_to "Advanced Search", search_pokemon_index_path %>

<% if @pokemons.empty? %>
    <p>No Pokemon were found.</p>
<% else %>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Type</th>
                <th>Region</th>
                <th colspan="3"></th>
            </tr>
        </thead>
        <%= render @pokemons %>
    </table>
<% end %>

<br>

<%= link_to "New Pokemon", new_pokemon_path %>
