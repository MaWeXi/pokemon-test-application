<p id="notice"><%= notice %></p>

<h1>Pokemon</h1>

<%= form_with url: '/pokemon', method: :get, local: true do |f| %>
  <%= f.label :search %>
  <%= f.text_field :search %>

  <%= f.submit "Search" %>
<% end %>

<%= link_to "Advanced Search", search_pokemon_index_path %>

<% if @pokemons.empty? %>
    <p>No Pokemon were found.</p>
<% else %>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Type</th>
                <th>Region</th>
                <th colspan="3"></th>
            </tr>
        </thead>

        <tbody>
            <% @pokemons.each do |pokemon| %>
            <tr>
                <td><%= pokemon.name %></td>
                <td><%= pokemon.pokemon_type %></td>
                <td><%= pokemon.region %></td>
                <td><%= link_to 'Show', pokemon %></td>
                <td><%= link_to 'Edit', edit_pokemon_path(pokemon) %></td>
                <td><%= link_to 'Destroy', pokemon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
<% end %>

<br>

<%= link_to 'New Pokemon', new_pokemon_path %>
