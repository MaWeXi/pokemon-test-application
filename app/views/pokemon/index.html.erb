<h1>Pokemon</h1>

<p>
  <%= form_with url: "/pokemon", method: :get, local: true do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name, :value => @name %>

    <%= f.submit t(".search") %>
  <% end %>

  <%= link_to t(".advanced_search"), search_pokemon_index_path %>
</p>

<p>
  <div class="tbl-container">
    <% if @pokemon.empty? %>
      <p>No Pokemon were found.</p>
    <% else %>
      <table class="table table-hover table-sm">
        <thead class="table-dark">
          <tr>
            <th style="width: 10%"><%= t(".name") %></th>
            <th style="width: 10%"><%= t(".type") %></th>
            <th style="width: 10%"><%= t(".region") %></th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <%= render @pokemon %>
      </table>
    <% end %>
  </div>
</p>

<p>
  <%= link_to t(".clear_search"), pokemon_index_path %> |
  <%= link_to t(".new_pokemon"), new_pokemon_path %>
</p>
