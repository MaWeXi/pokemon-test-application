<h1><%= t(".advanced_search") %></h1>

<%= form_with(url: "/pokemon/search", method: :get) do |f| %>
    <%= f.label t(".name") %>
    <%= f.text_field :name %>

    <%= f.label t(".type") %>
    <%= f.select :pokemon_type, options_for_select(@pokemon_types, params[:pokemon_type]), include_blank: true %><br>

    <%= f.label t(".region") %>
    <%= f.select :region, options_for_select(@regions, params[:region]), include_blank: true %><br><br>

    <%= f.submit t(".search") %>
<% end %>

<br>

<% if @pokemons.empty? %>
    <p>No Pokemon were found.</p>
<% else %>
    <table>
        <thead>
            <tr>
                <th><%= t(".name") %></th>
                <th><%= t(".type") %></th>
                <th><%= t(".region") %></th>
                <th colspan="3"></th>
            </tr>
        </thead>
        <%= render @pokemons %>
    </table>
<% end %>

<p><%= render "back" %></p>
